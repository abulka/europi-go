    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mock (3 lines)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mock"
        },
        {
            "name": "Run mock (4 lines) -tinyfont",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mock",
            "args": ["-tinyfont"]
        },
        {
            "name": "Run mock (3 lines) -tea ",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mock",
            "args": ["-tea"],
            "console": "integratedTerminal"
        },
        {
            "name": "Run mock (4 lines) -tea -tinyfont",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mock",
            "args": ["-tea", "-tinyfont"],
            "console": "integratedTerminal"
        }
    ]
}